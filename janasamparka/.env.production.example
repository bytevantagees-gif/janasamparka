# Production Environment Configuration
# Copy this file to .env.production and fill in actual values

# Application
APP_NAME=Janasamparka API
ENVIRONMENT=production
DEBUG=false

# Database - Production PostgreSQL
DATABASE_URL=postgresql://username:password@prod-db-host:5432/janasamparka_prod

# Security - CRITICAL: Generate a secure secret key
SECRET_KEY=your-super-secure-secret-key-here-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# SMS Provider (Twilio/AWS SNS)
SMS_PROVIDER_API_KEY=your-sms-provider-api-key

# CORS Origins (comma-separated)
CORS_ORIGINS=https://janasamparka.karnataka.gov.in,https://admin.janasamparka.karnataka.gov.in

# External API Keys
BHOOMI_API_KEY=your-bhoomi-api-key
KSNDMC_API_KEY=your-ksndmc-api-key
APMC_API_KEY=your-apmc-api-key

# Google Cloud Services
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Firebase Production
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-credentials.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# AWS S3 for File Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=janasamparka-prod-files
AWS_REGION=ap-south-1

# Redis for Caching and Sessions
REDIS_URL=redis://your-redis-host:6379/0
REDIS_PASSWORD=your-redis-password

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=INFO
LOG_FORMAT=json

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Backup Configuration
BACKUP_S3_BUCKET=janasamparka-prod-backups

# Performance
ENABLE_CACHING=true
CACHE_TTL_DEFAULT=300
CACHE_TTL_LONG=3600
